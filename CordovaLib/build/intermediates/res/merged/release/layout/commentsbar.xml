<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/linearlayout"
    android:background="@drawable/publish_backimg_main"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:id="@+id/btnreturn"
        android:background="@drawable/icon_return_selector"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/publish_backimg"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/btncomments"
        android:clickable="true"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/pl"
            android:layout_marginLeft="5dp"
            />
        <TextView

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="写评论"
            android:gravity="center_vertical|start"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blackTransparent3"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/commentsnum"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_commentsnum_selector"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:textSize="11dp"
        android:textColor="@color/orangered"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/btnfav"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_fav2"
        android:layout_width="30dp"
        android:layout_gravity="end|center_vertical"
        android:layout_height="30dp" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/btnlike"
        android:background="@drawable/icon_like1"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <View
        android:layout_width="15dp"
        android:layout_height="match_parent"/>
</LinearLayout>
